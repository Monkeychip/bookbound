{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@features/*": ["features/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["shared/ui/components/*"]
    }
  },
  "include": ["src", "server", "vite.config.ts"]
}
